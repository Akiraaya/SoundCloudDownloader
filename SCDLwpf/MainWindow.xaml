<Window x:Class="SCDLwpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCDLwpf"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="SoundCloudDownloader" Height="450" Width="800">
    <Grid Background="Black" >
        <Grid.RowDefinitions>
            
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Image Source="https://i.pinimg.com/736x/e1/2e/26/e12e26ce14c774758777214827e3d3bf.jpg" Stretch="Fill" Grid.ColumnSpan="3">
            <Image.Effect>
                <BlurEffect Radius="20" KernelType="Gaussian"/>
            </Image.Effect>
        </Image>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="10,10,10,20" Background="Black" CornerRadius="5,5,0,0" Opacity="0.5" Height="60">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="1" Opacity="1" Direction="270"/>
                </Border.Effect>
            </Border>
            <Border Margin="10,10,10,10" Background="#121212" CornerRadius="5" Grid.RowSpan="5" Grid.ColumnSpan="2" Grid.Row="0" Grid.Column="0" Opacity="0.5">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                </Border.Effect>
            </Border>

            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Height="50" Width="50" Margin="50,15,55,20" Opacity="0.7" >
                <Image x:Name="Downloader_Logo" Stretch="Fill" Source="/assets/img/lg.png">
                    <Image.Clip>
                        <RectangleGeometry Rect="0,0,70,70" RadiusX="5" RadiusY="5" />
                    </Image.Clip>
                </Image>
            </Border>
            <TextBox x:Name="linkTextBox" Background="#1f1f1f" VerticalContentAlignment="Center" Grid.Row="1" Grid.ColumnSpan="2" Margin="20,0,20,50" Padding="8,0,0,0" Height="30" ToolTip="Song URL" TextChanged="WatermarkTextLinkTextBox_TextChanged" BorderThickness="0" Foreground="White">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <TextBlock Name="WatermarkTextLinkTextBox" Text="Song URL" Foreground="#a9a9a9" Margin="30,0,0,52" VerticalAlignment="Center" IsHitTestVisible="False" Visibility="Visible" Grid.Row="1"/>
            <TextBox x:Name="clientIdTextBox" Background="#1f1f1f" Grid.Row="1" VerticalContentAlignment="Center" Grid.ColumnSpan="2" Margin="20,50,20,0" Padding="8,0,0,0" Height="30" IsEnabled="false" ToolTip="Client ID" TextChanged="WatermarkTextClientIdTextBox_TextChanged" BorderThickness="0" Foreground="White">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <TextBlock Name="WatermarkTextClientIdTextBox" Text="Client ID" Foreground="Gray" Margin="30,48,0,0" VerticalAlignment="Center" IsHitTestVisible="False" Visibility="Visible" IsEnabled="false" Grid.Row="1"/>
            <CheckBox x:Name="clientIdCheckBox" Content="Use custom Client ID" Grid.Row="2" Grid.ColumnSpan="1" Margin="20,15,0,50" IsChecked="False" Checked="clientIdCheckBox_CheckedChanged" Unchecked="clientIdCheckBox_CheckedChanged" Height="20" Foreground="White"/>
            <Button x:Name="downloadBtn" Content="Download" FontSize="15" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="1" Margin="20,0,20,40" Height="30" Background="Transparent" Click="downloadBtn_Click" Foreground="White" BorderThickness="0.5" BorderBrush="White" >
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="pathBtn" Content="Select path" FontSize="15" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="1" Margin="20,40,20,0" Height="30" Background="Transparent" Foreground="White" BorderThickness="0.5" Click="pathBtn_Click" BorderBrush="White">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>
            <TextBlock Text="Status:" FontSize="20" Margin="20,0,0,60" Grid.Row="3" Grid.ColumnSpan="2" Foreground="White" />
            <RichTextBox x:Name="statusRichTextBox" FontSize="10" Margin="15,10,25,20" Padding="0,5,0,0" Grid.RowSpan="2" Grid.ColumnSpan="2" Grid.Row="3" Background="Transparent" Foreground="White" BorderThickness="0" Height="110" IsReadOnly="true">
                <RichTextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </RichTextBox.Resources>
            </RichTextBox>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="1.5*" />
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="10,10,10,0" Background="Black" CornerRadius="5,5,0,0" Opacity="0.5">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="1" Opacity="1" Direction="270"/>
                    </Border.Effect>
                </Border>
                <Border Margin="10,10,10,10" Background="#1f1f1f" CornerRadius="5" Grid.RowSpan="3" Opacity="0.5">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                    </Border.Effect>
                </Border>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Song" FontSize="30" FontFamily="Arial" FontWeight="Black" Margin="120,10,0,0" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Foreground="White" Opacity="0.7"/>
                </Grid>
                <Grid Grid.Row="1" Grid.RowSpan="2" HorizontalAlignment="Center">
                    <Border Margin="0,20,180,30" Background="#ffdadada" Height="100" Width="100" CornerRadius="5" HorizontalAlignment="Center" ClipToBounds="true">
                        <Image x:Name="SongCover_Player" Stretch="UniformToFill">
                            <Image.Clip>
                                <RectangleGeometry Rect="0,0,100,100" RadiusX="5" RadiusY="5" />
                            </Image.Clip>
                        </Image>
                    </Border>
                    <Canvas x:Name="SongNameTextBlockCanvas" Grid.Row="1" ClipToBounds="True" Margin="105,25,20,60">
                        <TextBlock x:Name="SongNameTextBlock" Text="Song Name" FontSize="24"  Grid.Row="1" Foreground="White"/>
                    </Canvas>
                    <Canvas x:Name="ArtistNameTextBlockCanvas" Grid.Row="1" ClipToBounds="True" Margin="105,20,20,50" Height="20">
                        <TextBlock x:Name="ArtistNameTextBlock" Text="Artist" FontSize="10"  Grid.Row="1" Foreground="White"/>
                    </Canvas>
                    <Canvas x:Name="AlbumNameTextBlockCanvas" Grid.Row="1" ClipToBounds="True" Margin="105,50,20,30" Height="20">
                        <TextBlock x:Name="AlbumNameTextBlock" Text="Album" FontSize="10"  Grid.Row="1" Foreground="White"/>
                    </Canvas>
                    <TextBlock x:Name="GenreTextBlock" Text="Genre" FontSize="10" Margin="105,70,20,20" Grid.Row="1" Foreground="White" Height="20"/>
                    <TextBlock x:Name="YearTextBlock" Text="Year" FontSize="10" Margin="105,90,20,10" Grid.Row="1" Foreground="White" Height="20"/>
                </Grid>
                <Grid Grid.Row="2" HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <Border Margin="10,10,10,10" Background="#1f1f1f" CornerRadius="5" Opacity="0.5">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                    </Border.Effect>
                </Border>
                <TextBlock Text="Connections" FontSize="20" Margin="20,20,0,0" Foreground="White"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="2">
            <Grid>
                <Border Margin="10,10,10,10" Background="#1f1f1f" CornerRadius="5" Opacity="0.5">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                    </Border.Effect>
                </Border>
                <TextBlock Text="Settings" FontSize="20" Margin="20,20,0,0" Foreground="White"/>
            </Grid>
        </Grid>
        
    </Grid>
</Window>
